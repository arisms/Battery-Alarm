<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/spacing_normal">

    <Switch
        android:id="@+id/switch_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/text_notification_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero_percent"
        style="@style/TitleText"
        android:layout_margin="@dimen/spacing_normal"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/switch_active"
        />

    <TextView
        android:id="@+id/text_notification_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/battery_status"
        android:layout_toRightOf="@+id/text_notification_percentage"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        style="@style/LightText"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bluegray_transparent"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>